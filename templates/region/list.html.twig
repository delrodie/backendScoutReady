{% extends 'base.html.twig' %}
{% block extra_title %} Liste des ASNs {% endblock %}

{% block body %}
    <div id="mainContent" class="main-content expanded">
        <div class="content">
            <h4 class="content-label">Gestion des tables</h4>

            <div class="d-flex justify-content-between align-items-center mt-3 mb-3">
                <h6 class="content-title">Liste des asn</h6>
                <div>
                    <a href="{{ absolute_url(path('app_cache_delete_module', {module: 'region'})) }}" class="btn btn-transparent">Actualiser</a>
                    <a href="{{ absolute_url(path('app_region_new')) }}" class="btn btn-blue"><span class="icon ajouter">Ajouter</span> </a>
                </div>

            </div>

            <div class="table-responsive mt-5">
                <table id="liste" class="table table-striped table-hover table-sm table-liste text-nowrap">
                    <thead>
                    <tr>
                        <th class="text-center">#</th>
                        <th class="text-center">ASN</th>
                        <th class="text-center">NOM</th>
                        <th class="text-center">SYMBOLIQUE</th>
                        <th class="text-center">ACTIONS</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for region in regions %}
                        <tr>
                            <th class="text-center" scope="row">{{ loop.index }}</th>
                            <td>{{ region.asn['sigle']|raw }}</td>
                            <td>{{ region.nom|raw }}</td>
                            <td>{{ region.symbolique|raw }}</td>
                            <td class="text-center">
                                <a href="#"><i class="bi bi-file-earmark-text"></i></a>
                                |
                                <a href="{{ absolute_url(path('app_region_update', {'id': region.id })) }}"><i class="bi bi-pencil-square"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>

                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block extra_stylesheets %}
    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.0/css/dataTables.dataTables.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/3.2.3/css/buttons.dataTables.css">
{% endblock %}
{% block extra_javascripts %}
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdn.datatables.net/2.3.0/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.3/js/dataTables.buttons.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.3/js/buttons.dataTables.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.2.3/js/buttons.html5.min.js"></script>
    <script>
        document.addEventListener('turbo:load', function () {
            const table = document.querySelector('#liste');
            if (table && !table.classList.contains('dataTable-initialized')) {
                new DataTable(table, {
                    layout: {
                        topStart: {
                            buttons: ['copyHtml5', 'excelHtml5', 'csvHtml5', 'pdfHtml5']
                        }
                    },
                    language: {
                        url: 'https://cdn.datatables.net/plug-ins/2.3.0/i18n/fr-FR.json',
                        paginate: {
                            first: "Première",
                            last: "Dernière",
                            next: "Suiv",
                            previous: "Préc"
                        }
                    }
                });

                table.classList.add('dataTable-initialized'); // éviter la double initialisation
            }
        });

    </script>

{% endblock %}